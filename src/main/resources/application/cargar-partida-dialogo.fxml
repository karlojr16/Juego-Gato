<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CargarPartidaDialogoController" prefWidth="400" prefHeight="300">
    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
            <Label text="Selecciona una partida para cargar:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TableView fx:id="tablaPartidas" prefHeight="180" prefWidth="360">
                <columns>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="80" />
                    <TableColumn fx:id="colHora" text="Hora" prefWidth="60" />
                    <TableColumn fx:id="colJugadorX" text="Jugador X" prefWidth="100" />
                    <TableColumn fx:id="colJugadorO" text="Jugador O" prefWidth="100" />
                </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnCargar" text="Cargar" minWidth="90" />
                <Button fx:id="btnCancelar" text="Cancelar" minWidth="90" />
            </HBox>
        </VBox>
    </children>
</AnchorPane> 